<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/loggg"
    tools:context=".Loginpage">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Welcome Back"
        android:textSize="30dp"
        android:fontFamily="@font/poppinsbold"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="90dp"
        />
    <ImageView
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:src="@drawable/undraw"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="130dp"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        tools:ignore="UselessParent">

        <EditText
            android:id="@+id/edituser"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="top"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="350dp"
            android:layout_marginRight="30dp"
            android:hint="Masukan username anda"
            android:minHeight="48dp"
            android:paddingStart="40sp"
            tools:ignore="Autofill,HardcodedText,RtlSymmetry,TextFields,VisualLintTextFieldSize" />
        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginTop="-40dp"
            android:layout_marginStart="30dp"
            android:src="@drawable/userss"
            tools:ignore="ContentDescription" />

        <EditText
            android:id="@+id/editpassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_marginLeft="30dp"
            android:inputType="textPassword"
            android:layout_marginTop="40sp"
            android:layout_marginRight="30dp"
            android:hint="Masukan password anda"
            android:minHeight="48dp"
            android:paddingStart="40dp"
            tools:ignore="Autofill,HardcodedText,RtlSymmetry,TextContrastCheck,TextFields,VisualLintTextFieldSize" />
        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginTop="-40dp"
            android:layout_marginStart="30dp"
            android:src="@drawable/keys"
            tools:ignore="ContentDescription" />
        <TextView
            android:id="@+id/linkforget"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Forget Password"
            android:layout_gravity="right"
            android:layout_marginRight="30dp"
            android:fontFamily="@font/poppinsbold"
            android:textColor="#3F51B5"
            tools:ignore="HardcodedText,RtlHardcoded" />
        <Button
            android:id="@+id/btnlogin"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:layout_marginTop="30dp"
            android:layout_gravity="center"
            android:text="Login"
            android:background="@drawable/buton_saya"
            android:fontFamily="@font/poppinsbold"
            android:textSize="20sp"
            tools:ignore="HardcodedText" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Belum punya akun??"
            android:layout_marginStart="60dp"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/poppinsregular"
            android:textColor="#000000"
            tools:ignore="HardcodedText" />

        <TextView
            android:id="@+id/linkregister"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginTop="-28dp"
            android:layout_marginRight="80dp"
            android:fontFamily="@font/poppinsbold"
            android:text="Register"
            android:textColor="#3F51B5"
            android:textSize="17sp"
            tools:ignore="HardcodedText,RtlHardcoded,TextSizeCheck" />

        <View
            android:layout_width="200dp"
            android:layout_height="1dp"
            android:background="@color/black"
            android:layout_gravity="center"
            android:layout_marginTop="20sp"
            />
        <View
            android:layout_width="100dp"
            android:layout_height="25sp"
            android:layout_gravity="center"
            android:layout_marginTop="-13dp"
            android:background="#D8E1E1"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Login With"
            android:layout_gravity="center"
            android:layout_marginTop="-23dp"
            tools:ignore="HardcodedText" />
       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:orientation="horizontal"
           android:layout_gravity="center"
           android:layout_marginTop="10dp"
           >
           <ImageView
               android:layout_width="30dp"
               android:layout_height="30dp"
               android:src="@drawable/google"
               android:layout_marginStart="90dp"
               android:layout_gravity="center"
               android:importantForAccessibility="no"
               tools:ignore="VisualLintBounds" />

           <ImageView
               android:layout_width="30dp"
               android:layout_height="30dp"
               android:layout_gravity="center"
               android:layout_marginStart="50dp"
               android:importantForAccessibility="no"
               android:src="@drawable/fb"
               tools:ignore="ImageContrastCheck,VisualLintBounds" />
           <ImageView
               android:layout_marginStart="50dp"
               android:layout_width="30dp"
               android:layout_height="30dp"
               android:src="@drawable/aple"
               android:layout_gravity="center"
               tools:ignore="ContentDescription,VisualLintBounds" />

       </LinearLayout>

    </LinearLayout>

</RelativeLayout>